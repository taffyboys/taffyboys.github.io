<main class="container mx-auto mt-12 px-4 max-w-4xl">
    <div class="slanted-box bg-blue-600 p-8 mb-10 border-b-8 border-white shadow-[15px_15px_0px_#000b1a]">
        <div class="slanted-content text-white">
            <p class="text-cyan-200 text-sm font-bold mb-2 uppercase italic">Data Archive // <%= page.date.format('YYYY-MM-DD') %></p>
            <h1 class="text-5xl font-black italic uppercase"><%= page.title %></h1>
        </div>
    </div>

    <article class="slanted-box bg-white text-black p-8 md:p-12 mb-20 shadow-[20px_20px_0px_rgba(0,102,255,0.3)]">
        <div class="slanted-content prose prose-slate max-w-none prose-headings:italic prose-headings:font-black">
            <%- page.content %>
        </div>
    </article>
    
    <div class="mb-20">
        <a href="/" class="slanted-box bg-blue-500 text-white px-8 py-2 inline-block hover:bg-cyan-400 transition-colors">
            <div class="slanted-content font-bold italic">< RETURN</div>
        </a>
    </div>
</main>