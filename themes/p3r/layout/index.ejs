<main class="container mx-auto mt-12 px-4 flex flex-col md:flex-row gap-8">
    <section class="flex-1 space-y-8">
        <h2 class="text-6xl font-black italic mb-12 border-b-8 border-blue-600 inline-block">LATEST LOGS</h2>
        
        <% page.posts.forEach(function(post){ %>
            <a href="<%- url_for(post.path) %>" class="group relative block">
                <div class="slanted-box bg-blue-900/40 border-l-8 border-blue-500 p-6 hover:bg-blue-600 transition-all duration-500">
                    <div class="slanted-content">
                        <p class="text-cyan-400 text-sm mb-1"><%= post.date.format('YYYY.MM.DD') %> // MEMORY</p>
                        <h3 class="text-3xl font-bold italic group-hover:translate-x-4 transition-transform text-white">
                            <%= post.title %>
                        </h3>
                        <% if(post.excerpt) { %>
                            <div class="mt-4 text-gray-300 group-hover:text-white text-sm"><%- post.excerpt %></div>
                        <% } %>
                    </div>
                </div>
            </a>
        <% }) %>
    </section>

    <aside class="md:w-80 space-y-6">
        <div class="slanted-box bg-white text-black p-6 shadow-[10px_10px_0px_#0066ff] relative overflow-hidden">
            <div class="slanted-content text-center font-bold">
                <div class="relative w-32 h-32 mx-auto mb-4 flex items-center justify-center">
                    <svg viewBox="0 0 100 100" class="w-full h-full drop-shadow-blue-glow animate-moon-sway">
                        <defs>
                            <mask id="moon-mask">
                                <circle cx="50" cy="50" r="45" fill="white" />
                                <circle cx="65" cy="40" r="40" fill="black" />
                            </mask>
                        </defs>
                        <circle cx="50" cy="50" r="45" fill="#0066ff" mask="url(#moon-mask)" />
                        <rect x="30" y="20" width="4" height="4" fill="#00d9ff" opacity="0.6" />
                        <rect x="20" y="50" width="3" height="3" fill="#00d9ff" opacity="0.4" />
                    </svg>
                    <div class="absolute inset-0 pointer-events-none opacity-20 bg-scanlines rounded-full"></div>
                </div>

                <h4 class="text-2xl uppercase italic tracking-tighter leading-none border-b-2 border-black inline-block pb-1">Phase: Crescent</h4>
                <p class="text-[9px] text-blue-600 mt-2 tracking-widest uppercase font-black">The Dark Hour is approaching</p>
            </div>
        </div>
    </aside>
</main>