<main class="container mx-auto mt-12 px-4 flex flex-col md:flex-row gap-8">
    <section class="flex-1 space-y-8">
        <h2 class="text-6xl font-black italic mb-12 border-b-8 border-blue-600 inline-block">LATEST LOGS</h2>

        <div class="animate-p3-slide mt-12 mb-8 group">
            <div class="flex items-center gap-2 mb-2 ml-4">
                <span class="text-blue-500 font-black italic text-xs tracking-widest uppercase">Personnel File</span>
                <div class="h-[1px] w-12 bg-blue-500/50"></div>
            </div>

            <a href="/pdf/NPU_CV.pdf" download class="relative inline-flex items-center">
                <div class="absolute inset-0 bg-blue-600 slanted-box translate-x-1 translate-y-1 group-hover:translate-x-0 group-hover:translate-y-0 transition-transform duration-200"></div>
                
                <div class="relative bg-white text-black px-8 py-4 slanted-box border-2 border-blue-600 group-hover:bg-blue-500 group-hover:text-white transition-colors duration-300">
                    <div class="slanted-content flex items-center gap-6">
                        <div class="flex flex-col items-start leading-none">
                            <span class="text-[10px] font-bold text-blue-600 group-hover:text-white mb-1">RANK</span>
                            <span class="text-2xl font-black italic">MAX</span>
                        </div>
                        
                        <div class="h-10 w-[2px] bg-black/10 group-hover:bg-white/20"></div>
                        
                        <div class="flex flex-col items-start">
                            <span class="font-black italic text-xl tracking-tighter uppercase">DOWNLOAD_RESUME</span>
                            <span class="text-[9px] font-mono opacity-60">ID: ARCHIVE_S01.PDF</span>
                        </div>

                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 transform group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M13 5l7 7-7 7M5 5l7 7-7 7" />
                        </svg>
                    </div>
                </div>
            </a>
        </div>
        
        <% page.posts.forEach(function(post){ %>
            <a href="<%- url_for(post.path) %>" class="group relative block">
                <div class="slanted-box bg-blue-900/40 border-l-8 border-blue-500 p-6 hover:bg-blue-600 transition-all duration-500">
                    <div class="slanted-content">
                        <p class="text-cyan-400 text-sm mb-1"><%= post.date.format('YYYY.MM.DD') %> // MEMORY</p>
                        <h3 class="text-3xl font-bold italic group-hover:translate-x-4 transition-transform text-white">
                            <%= post.title %>
                        </h3>
                        <% if(post.excerpt) { %>
                            <div class="mt-4 text-gray-300 group-hover:text-white text-sm"><%- post.excerpt %></div>
                        <% } %>
                    </div>
                </div>
                
                <div class="mt-6 space-y-3">
                    <div class="relative group/stat">
                        <div class="flex justify-between items-center text-[10px] mb-1 italic font-black text-blue-400 uppercase tracking-tighter">
                            <span>Academics</span>
                            <span><%= post.academics || 'Rank 1' %></span>
                        </div>
                        <div class="h-1 bg-white/10 w-full overflow-hidden">
                            <div class="h-full bg-blue-500 shadow-[0_0_8px_#3b82f6] <%= post.academics_p || 'w-0' %> transition-all duration-1000"></div>
                        </div>
                    </div>

                    <div class="relative group/stat">
                        <div class="flex justify-between items-center text-[10px] mb-1 italic font-black text-pink-400 uppercase tracking-tighter">
                            <span>Charm</span>
                            <span><%= post.charm || 'Rank 1' %></span>
                        </div>
                        <div class="h-1 bg-white/10 w-full overflow-hidden">
                            <div class="h-full bg-pink-500 shadow-[0_0_8px_#ec4899] <%= post.charm_p || 'w-0' %> transition-all duration-1000"></div>
                        </div>
                    </div>

                    <div class="relative group/stat">
                        <div class="flex justify-between items-center text-[10px] mb-1 italic font-black text-cyan-400 uppercase tracking-tighter">
                            <span>Courage</span>
                            <span><%= post.courage || 'Rank 1' %></span>
                        </div>
                        <div class="h-1 bg-white/10 w-full overflow-hidden">
                            <div class="h-full bg-cyan-400 shadow-[0_0_8px_#22d3ee] <%= post.courage_p || 'w-0' %> transition-all duration-1000"></div>
                        </div>
                    </div>
                </div>
            </a>
        <% }) %>
    </section>

    <aside class="md:w-80 space-y-6">
        <div class="slanted-box bg-white text-black p-6 shadow-[10px_10px_0px_#0066ff] relative overflow-hidden">
            <div class="slanted-content text-center font-bold">
                <div class="relative w-32 h-32 mx-auto mb-4 flex items-center justify-center">
                    <svg viewBox="0 0 100 100" class="w-full h-full drop-shadow-blue-glow animate-moon-sway">
                        <defs>
                            <mask id="moon-mask">
                                <circle cx="50" cy="50" r="45" fill="white" />
                                <circle cx="65" cy="40" r="40" fill="black" />
                            </mask>
                        </defs>
                        <circle cx="50" cy="50" r="45" fill="#0066ff" mask="url(#moon-mask)" />
                        <rect x="30" y="20" width="4" height="4" fill="#00d9ff" opacity="0.6" />
                        <rect x="20" y="50" width="3" height="3" fill="#00d9ff" opacity="0.4" />
                    </svg>
                    <div class="absolute inset-0 pointer-events-none opacity-20 bg-scanlines rounded-full"></div>
                </div>

                <h4 class="text-2xl uppercase italic tracking-tighter leading-none border-b-2 border-black inline-block pb-1">Phase: Crescent</h4>
                <p class="text-[9px] text-blue-600 mt-2 tracking-widest uppercase font-black">The Dark Hour is approaching</p>
            </div>
        </div>
    </aside>
</main>